<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/header"/>
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/my_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:numColumns="2"

        android:verticalSpacing = "@dimen/y6"
        android:horizontalSpacing = "@dimen/x5"
        app:ptrMode="pullFromStart"

        >

    </com.handmark.pulltorefresh.library.PullToRefreshGridView>
    <LinearLayout
        android:id="@+id/im_no_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:src="@mipmap/red_no"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="没有更多数据了"

            android:layout_marginTop="@dimen/y15"
            android:textSize="14sp"
            android:textColor="@color/no_data_grey_plan"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:padding="@dimen/y10"
        android:textSize="@dimen/tv_18_sp"
        android:textColor="@color/white"
        android:background="@color/bg_blue"/>

</LinearLayout>
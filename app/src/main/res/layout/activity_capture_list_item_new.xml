<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cn.bingoogolapple.qrcode.zxing.ZXingView
            android:id="@+id/zbarview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:qrcv_animTime="1000"
            app:qrcv_barcodeRectHeight="@dimen/x200"
            app:qrcv_borderColor="@android:color/white"
            app:qrcv_borderSize="1dp"
            app:qrcv_cornerColor="@color/bg_blue"
            app:qrcv_cornerDisplayType="center"
            app:qrcv_cornerLength="20dp"
            app:qrcv_cornerSize="3dp"
            app:qrcv_customScanLineDrawable="@null"
            app:qrcv_isBarcode="false"
            app:qrcv_isOnlyDecodeScanBoxArea="true"
            app:qrcv_isScanLineReverse="true"
            app:qrcv_isShowDefaultGridScanLineDrawable="false"
            app:qrcv_isShowDefaultScanLineDrawable="true"
            app:qrcv_isShowLocationPoint="true"
            app:qrcv_isShowTipBackground="true"
            app:qrcv_isShowTipTextAsSingleLine="false"
            app:qrcv_isTipTextBelowRect="true"
            app:qrcv_maskColor="@color/alpha_50"

            app:qrcv_rectWidth="@dimen/x200"
            app:qrcv_scanLineColor="@color/colorPrimary"
            app:qrcv_scanLineMargin="0dp"
            app:qrcv_scanLineSize="0.5dp"
            app:qrcv_tipTextColor="@android:color/white"
            app:qrcv_tipTextSize="12sp"
            app:qrcv_toolbarHeight="@dimen/y40"
            app:qrcv_topOffset="@dimen/y10"
            app:qrcv_isAutoZoom="true"
            app:qrcv_verticalBias="-1" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"

            android:layout_margin="@dimen/y10"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_login_close"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@id/tv_hide"

                android:layout_centerHorizontal="true"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_open_flashlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible"
                    android:layout_marginTop="@dimen/x140"
                    android:drawablePadding="@dimen/x5"
                    android:drawableTop="@mipmap/icon_flash_light"
                    android:text="轻点照亮"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_14_sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:background="@mipmap/scan_bg"
                android:gravity="center"

                android:text="将二维码放入框内，即可自动扫描"
                android:textColor="@color/white"/>




            <LinearLayout
                android:id="@+id/l_tp_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:orientation="vertical"
                android:paddingBottom="@dimen/y5"
                android:paddingTop="@dimen/y5"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/my_listview"
                        android:layout_width="match_parent"
                        android:divider="@null"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/x5"
                        android:layout_height="@dimen/y120">
                    </ListView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/y5"
                        android:layout_marginBottom="@dimen/y5"
                        android:background="@mipmap/tuozhuai"/>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="@dimen/y5"
                    android:layout_marginBottom="@dimen/y5"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/y2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_scan_status_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_16_sp"
                        android:text="已扫数量: "/>

                    <TextView
                        android:id="@+id/tv_scan_status_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/tv_18_sp"
                        android:text="0"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_16_sp"
                        android:text="片"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tv_14_sp"
                        android:textColor="@color/white"
                        android:text="确认"
                        android:paddingLeft="@dimen/x12"
                        android:paddingRight="@dimen/x12"
                        android:paddingTop="@dimen/y4"
                        android:paddingBottom="@dimen/y4"
                        android:background="@drawable/shape_round_orange"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
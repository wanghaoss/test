<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white"
        >

        <TextView
            android:id="@+id/subscription_cancl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/y60"
            android:padding="@dimen/x14"
            android:text="取消?"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:layout_below="@id/subscription_cancl"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:gravity="center"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="#9000"
            android:textSize="14sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_message"
            android:background="#ccc"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y45"
            android:layout_below="@id/line1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x14"
            android:paddingRight="@dimen/x14">

            <Button
                android:id="@+id/subscription_submit"
                android:layout_width="0dp"
                android:layout_height="@dimen/y45"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#ccc"
                />

            <Button
                android:id="@+id/subscription_exit"
                android:layout_width="0dp"
                android:layout_height="@dimen/y45"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
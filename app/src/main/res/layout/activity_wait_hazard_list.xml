<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".wait_to_handle.WaitMainActivity"
        android:orientation="vertical">

        <com.example.new_androidclient.customize_view.TitleLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:name="@string/wait_main_list_name"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/title"
            android:id="@+id/wait_main_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.example.new_androidclient.customize_view.NoDataLayout
            android:id="@+id/nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>
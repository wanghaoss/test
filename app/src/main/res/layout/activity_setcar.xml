<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_gray"
                android:orientation="vertical"
                tools:context=".ui.activity.ConfigurationVehicleActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_carList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorBackground"
        android:dividerHeight="@dimen/y5"
        app:ptrAnimationStyle="flip"
        app:ptrMode="both"
        android:layout_above="@+id/bt_newaddcar_bottom">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <LinearLayout
        android:id="@+id/im_no_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView

            android:id="@+id/im_icon_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@mipmap/icon_no_data"/>

        <TextView
            android:id="@+id/tv_massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/y15"

            android:text="当前暂无车辆信息"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/tv_16_sp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/bt_newaddcar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_10dp"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@drawable/blue_btn_bg"
        android:padding="15dp"
        android:text="新增车辆"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_16_sp"/>
</RelativeLayout>
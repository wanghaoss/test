<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.new_androidclient.customize_view.TitleLayout
        android:id="@+id/inspection_stop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/inspection_stop_title" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@id/inspection_stop_title"
        android:layout_margin="@dimen/dp_20">

        <EditText
            android:id="@+id/inspection_stop_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_margin="@dimen/dp_5"
            android:background="@null"
            android:gravity="start"
            android:hint="@string/inspection_stop_title"
            android:textSize="@dimen/text_size_16" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/inspection_stop_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_blue"
        android:text="@string/inspection_stop"
        android:textColor="@color/text_white" />

</RelativeLayout>


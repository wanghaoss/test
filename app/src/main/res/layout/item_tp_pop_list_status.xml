<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:padding="@dimen/common_5dp">
    <TextView
        android:id="@+id/tv_No"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="01"
        android:singleLine="true"
        android:textColor="@color/font_black"
        android:textSize="@dimen/tv_12_sp"
        android:layout_marginLeft="@dimen/x5"
        android:gravity="center_horizontal"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="8255959949498489"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/tv_12_sp"/>

        <TextView
            android:id="@+id/tv_cargo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="数量: 1  重量: 10kg"
            android:singleLine="true"
            android:layout_marginTop="@dimen/y1"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/tv_12_sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_kuqu_num"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="A0101"

        android:singleLine="true"


        android:gravity="center"
        android:textColor="@color/font_black"
        android:textSize="@dimen/tv_12_sp"/>






</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alpha_50"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/y15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y10"
                android:drawablePadding="@dimen/y15"
                android:gravity="center_horizontal"
                android:text="批量扫描托盘信息"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/tv_16_sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y10"

                android:gravity="center_horizontal"
                android:text="提示 : 按下开关开始扫描,松手即停止"
                android:textColor="@color/red"
                android:textSize="@dimen/tv_14_sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"/>

            <LinearLayout
                android:id="@+id/llfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/rlthree"
                android:layout_marginTop="@dimen/common_1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tpNO"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="序号"
                        android:gravity="center"

                        android:textColor="@color/font_black"
                        android:textSize="@dimen/tv_13_sp"/>


                    <TextView
                        android:id="@+id/tv_tpOrCon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_10dp"
                        android:text="托盘编码"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/tv_13_sp"/>

                    <TextView
                        android:id="@+id/tv_tp_fenqu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/common_10dp"
                        android:text="库区"
                        android:layout_weight="1.5"

                        android:gravity="center"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/tv_13_sp"/>



                </LinearLayout>

            <ListView
                android:id="@+id/lv_goodsDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_marginRight="@dimen/common_10dp"
                android:visibility="visible"

                android:scrollbars="none"></ListView>

            <RelativeLayout
                android:id="@+id/rl_noData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_no_data"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/common_20dp"
                    android:text="暂时未找到次单匹配的托盘哦"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_16_sp"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:padding="@dimen/x12"
                android:gravity="center"

                android:layout_weight="1"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/font_blue"
                android:padding="@dimen/x12"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</LinearLayout>
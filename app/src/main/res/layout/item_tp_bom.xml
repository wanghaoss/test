<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_gray"
                android:orientation="vertical"
               >


    <LinearLayout
        android:id="@+id/rltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_tuopan_kind"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@color/bg_gray"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_tuopan_kind"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_tuopan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝色网格塑料托盘 1.2m*1.2m"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_12_sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y2"
                >
                <TextView
                    android:id="@+id/tv_tuopan_jingzai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="静载: 3.5T"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_12_sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_tp_out_num_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出库托数: "
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/tv_12_sp"/>

                    <TextView
                        android:id="@+id/tv_tuopan_yanshou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/green_text"
                        android:textSize="@dimen/tv_14_sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/y2"
                >
                <TextView
                    android:id="@+id/tv_tuopan_dongzai"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="动载: 2.5T"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_12_sp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_tuopan_baoxiu_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="异常托数: "
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/tv_12_sp"/>
                    <TextView
                        android:id="@+id/tv_tuopan_baoxiu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/tv_14_sp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"


            android:orientation="vertical"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="@dimen/x10">

            <TextView
                android:id="@+id/tv_tuopan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="ET01"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_14_sp"

                />
            <TextView
                android:id="@+id/tv_tuopan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="x100"
                android:layout_marginTop="@dimen/y5"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_16_sp"

                />
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/rlthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="@dimen/x10"
        android:layout_marginTop="@dimen/common_line"
        android:layout_below="@+id/rltwo"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_tuopan_kind_cargo"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@color/bg_gray"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"

            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_tuopan_kind"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_tuopan_name_cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝色网格塑料托盘 1.2m*1.2m"
                android:textColor="@color/font_black"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/tv_12_sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y5"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out_name_by_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="出库数量: "
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/tv_12_sp"/>

                    <TextView
                        android:id="@+id/tv_out_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="0"
                        android:textColor="@color/green_text"
                        android:textSize="@dimen/tv_14_sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/y2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out_name_by_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="重量: "
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/tv_12_sp"/>

                    <TextView
                        android:id="@+id/tv_out_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="10000kg"
                        android:textColor="@color/green_text"
                        android:textSize="@dimen/tv_14_sp"/>

                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:orientation="horizontal"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="@dimen/x5">

            <TextView
                android:id="@+id/tv_cargo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="x100"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_16_sp"

                />

            <TextView
                android:id="@+id/tv_cargo_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="100kg"
                android:layout_marginLeft="@dimen/y5"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_14_sp"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlthree"
        android:layout_marginTop="@dimen/common_1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tpNO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:text="序号"
                android:gravity="center"

                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_13_sp"/>


            <TextView
                android:id="@+id/tv_tpOrCon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_10dp"
                android:text="托盘编码"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_13_sp"/>

            <TextView
                android:id="@+id/tv_tp_fenqu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:padding="@dimen/common_10dp"
                android:text="库区"
                android:layout_weight="1.5"

                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_13_sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
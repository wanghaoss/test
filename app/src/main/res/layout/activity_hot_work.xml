<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E3E3E3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work.HotWorkActivity">

    <com.example.new_androidclient.customize_view.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="动火分析" />

            <LinearLayout
                android:layout_below="@+id/title"
                android:id="@+id/listLayout"
                android:layout_marginBottom="98dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/gasList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addTo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/bg_blue"
                android:text="添加"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/nextDevice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/bg_blue"
                android:text="@string/work_application_appointment_dh_baocun"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

    <com.example.new_androidclient.customize_view.NoDataLayout
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>
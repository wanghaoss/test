<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".device_management.InterimPlanDetailsActivity">

    <com.example.new_androidclient.customize_view.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:name="@string/work_order" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <TextView
                        android:text="所属分厂："
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device1"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <TextView
                        android:text="所属车间："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device2"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <TextView
                        android:text="所属装置："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device3"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="所属单元："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device4"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="所属区域："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device5"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="设备名称："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device6"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="设备位号："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device7"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="设备编码："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device8"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/device9Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="异常/故障现象："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/device9"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/plan"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:focusable="true"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="计划名称："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/planNameEdit"
                        android:hint="请输入计划名称"
                        android:background="@null"
                        android:textColor="#999999"
                        android:gravity="right|center"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/workGenreLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">

                    <TextView
                        android:text="工单类别："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/workGenreText"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/device_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="工程量描述："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/wordEdit"
                        android:hint="请输入工程量描述"
                        android:textColor="#999999"
                        android:background="@null"
                        android:textSize="15sp"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/project"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/start_time_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="计划起始时间："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/starting_time"
                        android:hint="请选择起始时间"
                        android:textSize="15sp"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/start_no_time_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="计划完成时间："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/completion_time"
                        android:hint="请选择完成时间"
                        android:textSize="15sp"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/projectLeaderLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">

                    <TextView
                        android:text="项目负责人："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/projectLeaderText"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/device_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/contractorLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">

                    <TextView
                        android:text="作业承包商："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/contractorText"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/device_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/workLeaderLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">

                    <TextView
                        android:text="作业负责人："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/workLeaderText"
                        tools:text="aaaaaa"
                        android:textSize="15sp"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/device_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="预算值："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/budgetValueEdit"
                        android:hint="请输入设备编码"
                        android:textColor="#999999"
                        android:background="@null"
                        android:numeric="decimal"
                        android:textSize="15sp"
                        android:gravity="right|center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        tools:ignore="Deprecated" />
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="工单状态："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/workStatus"
                        tools:text="未下达"
                        android:textSize="15sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/handler"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="处理人："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/handlerText"
                        tools:text="啊啊啊啊啊"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/device_no"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/handler1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="处理人："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/handlerText1"
                        tools:text="啊啊啊啊啊"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="拒绝原因："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/reasonsText"
                        tools:text="未下达"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <View
                    android:background="#c8c8c8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45">
                    <TextView
                        android:text="工单状态："
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/workText"
                        tools:text="未下达"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80">

                <Button
                    android:id="@+id/agree"
                    android:text="同意"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/device_agree"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/noAgree"
                    android:text="不同意"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/device_no_agree"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
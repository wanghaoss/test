<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App_RootLayout"
    android:background="@color/colorThemeBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">

        <RelativeLayout
            style="@style/App_RootLayout_Height"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/old_pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="原密码"
                android:visibility="gone"
                android:textColor="@color/font_black"/>

            <com.etuo.kucun.widget.ClearEditText
                android:id="@+id/update_password_oldET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x10"
                android:layout_toRightOf="@id/old_pass_tv"
                android:layout_toLeftOf="@+id/old_password_rightLL"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="@color/font_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/old_password_rightLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x5">

                <CheckBox
                    android:id="@+id/update_password_hide_oldCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_pwd_show"
                    android:padding="@dimen/x10"
                    android:button="@null"
                    android:visibility="gone"
                    android:checked="false" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/App_RootLayout_Height"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="新密码"
                android:visibility="gone"
                android:textColor="@color/font_black"/>

            <com.etuo.kucun.widget.ClearEditText
                android:id="@+id/update_password_newET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x10"
                android:layout_toRightOf="@+id/new_pass_tv"
                android:layout_toLeftOf="@+id/new_password_rightLL"
                android:background="@null"
                android:hint="请设置新密码"
                android:inputType="textPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:maxLength="20"
                android:singleLine="true"
                android:textColorHint="@color/font_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/new_password_rightLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/x5">

                <CheckBox
                    android:id="@+id/update_password_hide_newCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_pwd_show"
                    android:padding="@dimen/x10"
                    android:button="@null"
                    android:visibility="gone"
                    android:checked="false" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/update_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/blue_btn_bg"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_16_sp"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_gray"
                android:orientation="vertical"
               >

    <LinearLayout
        android:id="@+id/rltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_tuopan_kind"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@color/bg_gray"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"

            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/iv_tuopan_kind"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_tuopan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝色网格塑料托盘 1.2m*1.2m"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_12_sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_tuopan_jingzai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"

                    android:text="静载: 3.5T"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_12_sp"/>

                <TextView
                    android:id="@+id/tv_ruku_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"
                    android:layout_marginLeft="@dimen/x10"

                    android:text="已入库: "
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_12_sp"/>

                <TextView
                    android:id="@+id/tv_tuopan_yanshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"

                    android:text="0"
                    android:textColor="@color/green_text"
                    android:textSize="@dimen/tv_14_sp"/>



                <TextView
                    android:id="@+id/tv_tuopan_baoxiu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"
                    android:layout_marginLeft="@dimen/x10"

                    android:text="报修: "
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/tv_12_sp"/>

                <TextView
                    android:id="@+id/tv_tuopan_baoxiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y2"

                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/tv_14_sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tuopan_dongzai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"

                android:text="动载: 2.5T"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/tv_12_sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"


            android:orientation="vertical"
            android:gravity="right"

            android:layout_marginLeft="@dimen/x10">
            <TextView
                android:id="@+id/tv_tuopan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="ET01"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_14_sp"

                />
            <TextView
                android:id="@+id/tv_tuopan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="x100"
                android:layout_marginTop="@dimen/y5"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_16_sp"

                />
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>
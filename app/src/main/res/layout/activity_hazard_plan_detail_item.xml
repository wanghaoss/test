<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="hazard_table_plan_detail"
            type="com.example.new_androidclient.hazard.bean.HazardTablePlanDetailBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/hazard_table_plan_detail_item_index + hazard_table_plan_detail.index}"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/hazard_table_plan_detail_item_planname + hazard_table_plan_detail.planname}"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/hazard_table_plan_detail_item_name + hazard_table_plan_detail.name}"
                android:textSize="@dimen/text_size_16" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"/>

    </LinearLayout>
</layout>
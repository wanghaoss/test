<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_back_img"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/y15"
                    android:layout_marginTop="@dimen/y10"
                    android:paddingLeft="@dimen/x10"
                    android:src="@drawable/close"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="@dimen/y10"
                    android:background="@mipmap/icon_login"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tv_16_sp"
                    android:textColor="@color/font_orange"
                    android:text="仓储端"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_marginBottom="@dimen/y40"
                    android:paddingTop="@dimen/y5"
                    android:paddingBottom="@dimen/y5"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_rectangle_orange_bg_white_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y36"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/edit_bg"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/x18"
                        android:layout_height="@dimen/x18"

                        android:layout_gravity="center"
                        android:src="@mipmap/icon_mobile"/>

                    <com.etuo.kucun.widget.ClearEditText
                        android:id="@+id/login_account_et"
                        style="@style/CommonEditText"
                        android:hint="输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y36"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/edit_bg"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/x18"

                        android:layout_height="@dimen/x18"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_pwd"/>

                    <com.etuo.kucun.widget.ClearEditText
                        android:id="@+id/login_pwd_et"
                        style="@style/CommonEditText"
                        android:layout_weight="1"
                        android:hint="输入密码"
                        android:inputType="textPassword"
                        android:text="a111111"
                        android:maxLength="20"

                        />

                    <CheckBox
                        android:id="@+id/login_pwd_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="@dimen/x10"
                        android:button="@drawable/check_pwd_show"
                        android:paddingRight="@dimen/x5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y36"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/edit_bg"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.etuo.kucun.widget.ClearEditText
                        android:id="@+id/login_identifying_et"
                        style="@style/CommonEditText"

                        android:layout_weight="1"

                        android:hint="请输入校验码"
                        android:inputType="textVisiblePassword"
                        android:maxLength="4"
                        />

                    <com.etuo.kucun.view.VerificationCodeView
                        android:id="@+id/login_identifying_img"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"


                        android:padding="@dimen/x5"/>
                </LinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="@dimen/y10"
                   android:visibility="gone"
                   android:layout_height="wrap_content">

                   <CheckBox
                       android:id="@+id/login_remember_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="left"

                       android:layout_marginLeft="@dimen/x20"
                       android:button="@drawable/select_shopping_item"

                       android:paddingBottom="@dimen/y10"
                       android:paddingLeft="@dimen/x10"
                       android:paddingRight="@dimen/x10"
                       android:paddingTop="@dimen/y10"
                       android:text="记住用户名"
                       android:textColor="@color/font_black"
                       android:textSize="15sp"
                       android:visibility="visible"/>

               </RelativeLayout>



                <Button
                    android:id="@+id/login_bt"
                    style="@style/CommonBlueBtn"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y30"
                    android:text="立即登录"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25">



                    <TextView
                        android:id="@+id/login_forget_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="忘记密码?"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/tv_16_sp"
                        android:visibility="gone"
                        android:textColor="@color/font_orange"/>
                </RelativeLayout>
                <!--隐私协议-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y15"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录即代表您已经同意"
                        android:textSize="@dimen/tv_14_sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/regist_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《易托隐私政策》"
                        android:textColor="@color/font_blue"
                        android:textSize="@dimen/tv_14_sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/user_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《易托用户协议》"
                        android:visibility="gone"
                        android:textColor="@color/font_orange"
                        android:textSize="@dimen/tv_14_sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
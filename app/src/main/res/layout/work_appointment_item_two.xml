<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="@dimen/dp_5">

    <CheckBox
        android:id="@+id/work_appointment_item_two_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16" />

    <EditText
        android:id="@+id/work_appointment_item_two_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/work_appointment_item_two_checkbox"
        android:textSize="@dimen/text_size_16" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/work_appointment_item_two_edit"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/line" />
</RelativeLayout>
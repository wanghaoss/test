<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_gray"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:padding="@dimen/common_5dp">

        <TextView
            android:id="@+id/tv_No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="01"
            android:singleLine="true"
            android:textColor="@color/font_black"
            android:textSize="@dimen/tv_12_sp"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center_horizontal"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="8255959949498489"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_12_sp"/>

            <TextView
                android:id="@+id/tv_cargo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="数量: 1  重量: 10kg"
                android:singleLine="true"
                android:layout_marginTop="@dimen/y1"
                android:gravity="center"
                android:textColor="@color/font_black"
                android:textSize="@dimen/tv_12_sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kuqu_num"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="A0101"

            android:singleLine="true"


            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="@dimen/tv_12_sp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_yanshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入库"
                    android:background="@drawable/shape_rectangle_line_black_bg_white"
                    android:textColor="@color/font_black"
                    android:paddingTop="@dimen/x3"
                    android:paddingBottom="@dimen/x3"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:textSize="@dimen/tv_12_sp"
                    />
                <TextView
                    android:id="@+id/tv_baoxiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除"
                    android:background="@drawable/shape_rectangle_line_black_bg_white"
                    android:textColor="@color/font_black"
                    android:paddingTop="@dimen/x3"
                    android:paddingBottom="@dimen/x3"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="@dimen/tv_12_sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="托盘不通过"
                android:visibility="gone"

                android:background="@drawable/shape_rectangle_line_black_bg_white"
                android:textColor="@color/font_black"
                android:paddingTop="@dimen/x3"
                android:paddingBottom="@dimen/x3"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:textSize="@dimen/tv_12_sp"
                android:layout_marginTop="@dimen/y2"
                />


        </LinearLayout>
    </LinearLayout>




</LinearLayout>